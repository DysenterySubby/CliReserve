<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>
	<style name="circleImg_user" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">50%</item>
	</style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>
	<style name="chips" parent="@style/Widget.MaterialComponents.Chip.Filter">
		<item name="chipBackgroundColor">@color/colorAccent</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
</resources>
